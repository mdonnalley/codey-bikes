{
    "mcpServers": {
        "Salesforce DX": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "-y",
                "@salesforce/mcp@latest",
                "--orgs",
                "ALLOW_ALL_ORGS",
                "--toolsets",
                "data, experimental, metadata, orgs, testing, users"
            ]
        },
        "playwright": {
            "command": "npx",
            "args": ["@playwright/mcp@latest"]
        }
    }
}
